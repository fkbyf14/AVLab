<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent"
              android:weightSum="1">
	<TextView
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:text="Android Virtual Laboratory"
			android:layout_weight="0.04" android:id="@+id/text" android:textSize="30dp"/>
	<Button
			android:layout_width="134dp"
			android:layout_height="wrap_content"
			android:text="Start lab"
			android:id="@+id/start" android:layout_gravity="center_horizontal"/>
	<Button
			android:layout_width="131dp"
			android:layout_height="wrap_content"
			android:text="Configure lab"
			android:id="@+id/configuration" android:layout_gravity="center_horizontal"/>
	<Button
			android:layout_width="134dp"
			android:layout_height="wrap_content"
			android:text="Exit lab"
			android:id="@+id/exit" android:layout_gravity="center_horizontal"/>
</LinearLayout>

